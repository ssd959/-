<body>
  <div class="card">
    <h2>Ваш Баланс</h2>
    <div class="balance">$<span id="cardBalance">0</span></div>
    <div class="card-number">1234 5678 9012 3456</div>

    <div class="history">
      <h3>Останні транзакції</h3>
      <div id="transactions"></div>
    </div>
  </div>

  <script>
    // Баланс и история транзакций
    let cardBalance = localStorage.getItem('cardBalance') ? parseInt(localStorage.getItem('cardBalance')) : 250;
    let transactions = JSON.parse(localStorage.getItem('transactions')) || [
      { type: 'Поповнення', amount: 100 },
      { type: 'Зняття', amount: -50 },
    ];

    // Отображение баланса
    document.getElementById('cardBalance').textContent = cardBalance;

    // Отображение транзакций
    const transactionsContainer = document.getElementById('transactions');
    transactions.forEach(transaction => {
      const transactionElement = document.createElement('div');
      transactionElement.className = 'transaction';
      transactionElement.innerHTML = `
        <span>${transaction.type}</span>
        <span class="amount">${transaction.amount > 0 ? '+' : ''}${transaction.amount}$</span>
      `;
      transactionsContainer.appendChild(transactionElement);
    });
  </script>
