  <style>
    body {
      font-family: 'Arial', sans-serif;
      background: #f3f4f7;
      color: #333;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .card {
      background: linear-gradient(145deg, #0070ba, #003087);
      color: #ffffff;
      border-radius: 20px;
      width: 360px;
      padding: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      text-align: center;
    }

    .card h2 {
      font-size: 22px;
      margin-bottom: 15px;
    }

    .card .balance {
      font-size: 40px;
      font-weight: bold;
      margin: 10px 0;
    }

    .card .card-number {
      font-size: 18px;
      font-family: 'Courier New', monospace;
      background: rgba(255, 255, 255, 0.1);
      padding: 10px;
      border-radius: 10px;
      margin: 15px 0;
    }

    .history {
      margin-top: 20px;
    }

    .history h3 {
      font-size: 18px;
